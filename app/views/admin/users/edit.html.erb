<% if @admin %>
  <!-- 管理者の編集 -->
  <h2>【管理画面】管理者編集 ID: <%= @admin.id %></h2>
  <%= form_for @admin, url: admin_user_path(@admin, type: 'admin'), method: :patch do |f| %>
    <div>
      <%= f.label :family_name, "性" %><br>
      <%= f.text_field :family_name %>
    </div>
    <div>
      <%= f.label :given_name, "名" %><br>
      <%= f.text_field :given_name %>
    </div>
    <div>
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :address, "住所" %><br>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :phone_number, "電話番号" %><br>
      <%= f.text_field :phone_number %>
    </div>
    <div>
      <%= f.label :password, "パスワード(変更しない場合は空)" %><br>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
  <% end %>

  <hr>
  <%= link_to "一覧へ戻る", admin_users_path, class: "btn btn-secondary" %>

<% elsif @user %>
  <h2>【管理画面】ユーザー編集 ID: <%= @user.id %></h2>
  <%= form_for @user, url: admin_user_path(@user, type: 'user'), method: :patch do |f| %>
    <div>
      <%= f.label :family_name, "性" %><br>
      <%= f.text_field :family_name %>
    </div>
    <div>
      <%= f.label :given_name, "名" %><br>
      <%= f.text_field :given_name %>
    </div>
    <div>
      <%= f.label :business_name, "ビジネス名" %><br>
      <%= f.text_field :business_name %>
    </div>
    <div>
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :address, "住所" %><br>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :phone_number, "電話番号" %><br>
      <%= f.text_field :phone_number %>
    </div>
    <div>
      <%= f.label :password, "パスワード(変更しない場合は空)" %><br>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
  <% end %>

  <hr>
  <%= link_to "一覧へ戻る", admin_users_path, class: "btn btn-secondary" %>

<% else %>
  <p>該当データがありません。</p>
  <%= link_to "一覧へ戻る", admin_users_path, class: "btn btn-secondary" %>
<% end %>
