<h2>【管理画面】出品者編集 (ID:<%= @seller.id %>)</h2>
<%= form_for @seller, url: admin_seller_path(@seller), method: :patch do |f| %>
  <div>
    <%= f.label :family_name, "性" %><br>
    <%= f.text_field :family_name %>
  </div>

  <div>
    <%= f.label :given_name, "名" %><br>
    <%= f.text_field :given_name %>
  </div>

  <div>
    <%= f.label :business_name, "ビジネス名" %><br>
    <%= f.text_field :business_name %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :phone_number, "電話番号" %><br>
    <%= f.text_field :phone_number %>
  </div>

  <div>
    <%= f.label :password, "パスワード(変更する場合のみ)" %><br>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "更新する", class: "btn btn-primary" %>
<% end %>

<hr>
<%= link_to "一覧へ戻る", admin_sellers_path, class: "btn btn-secondary" %>
