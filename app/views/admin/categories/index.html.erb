<div class="admin-container">
  <h2>【管理画面】カテゴリ一覧</h2>

  <%= link_to "カテゴリ追加", new_admin_category_path, class: "btn btn-primary" %>

  <table class="admin-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>カテゴリ名</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.category_name %></td>
          <td>
            <%= link_to "編集", edit_admin_category_path(category) %> |
            <%= link_to "削除", admin_category_path(category),
                        method: :delete,
                        data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<hr>
<%= link_to "管理トップへ戻る", admin_top_path, class: "btn btn-secondary" %>
