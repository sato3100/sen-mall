<div class="seller-item-form">
  <h2>出品商品登録</h2>

  <%= form_for [:seller, @item] do |f| %>
    <div>
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :code, "型番" %>
      <%= f.text_field :code, size: 30 %>
    </div>

    <div>
      <%= f.label :stock, "在庫" %>
      <%= f.number_field :stock %>
    </div>

    <div class="checkbox-wrapper">
      <%= check_box_tag "item[new]", "1", @item.new %>
      <label>新品ならチェック</label>
    </div>

    <div>
      <%= f.label :price, "価格" %>
      <%= f.number_field :price %>
    </div>

    <div>
      <%= f.label :description, "商品説明(500字以内)" %><br>
      <%= f.text_area :description, rows: 4 %>
    </div>

    <div>
      <%= f.label :item_picture, "画像" %>
      <%= f.file_field :item_picture %>
    </div>

    <div>
      <%= f.label :category_id, "カテゴリー" %>
      <%= f.collection_select :category_id, @categories, :id, :category_name, include_blank: true %>
    </div>

    <%= f.submit "登録", class: "btn-submit" %>
  <% end %>
</div>
