<!-- app/views/orders/show.html.erb -->
<h2>注文確定画面</h2>

<% if @order.present? %>
  <p>注文番号: <%= @order.id %></p>
  <p>合計金額: ¥<%= @order.total_price %></p>

  <table>
    <tr><th>商品名</th><th>数量</th><th>小計</th></tr>
    <% @order.order_items.each do |oi| %>
      <tr>
        <td><%= oi.item.name %></td>
        <td><%= oi.quantity %></td>
        <td>¥<%= oi.price * oi.quantity %></td>
      </tr>
    <% end %>
  </table>

  <p>配送状況:
    <% @order.order_items.each do |oi| %>
      <%= oi.delivery_text %>
    <% end %>
  </p>
<% else %>
  <p>注文が見つかりませんでした。</p>
<% end %>

<%= link_to "注文履歴に戻る", orders_path, class: "btn btn-secondary" %>
